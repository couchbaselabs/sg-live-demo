{
  "log": ["*"],
  "databases": {
	"grocery-sync": {
	  "server": "walrus:",
	  "bucket": "grocery-sync",
	  "users": {
		"alice": {
		  "disabled": false,
		  "password": "password",
		  "admin_channels": ["items-alice"]
		},
		"bob": {
		  "disabled": false,
		  "password": "password",
		  "admin_channels": ["items-bob"]
		}
	  },
	  "sync": `
	  	function(doc,oldDoc) {
		  channel("items-"+doc.owner); //Add an item document to the owner's items channel
		  access(doc.owner,"items-"+doc.owner); //Give the owner access to their items channel
		}
	  `
	}
  }
}





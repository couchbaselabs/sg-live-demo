{
  "log": ["*"],
  "databases": {
	"grocery-sync": {
	  "server": "walrus:",
	  "bucket": "grocery-sync",
	  "users": {
		"alice": {
		  "disabled": false,
		  "password": "password",
          "admin_channels": ["items-alice"]
		},
		"bob": {
		  "disabled": false,
		  "password": "password",
          "admin_channels": ["items-bob"]
		}
	  },
	  "sync": `
	  	function(doc,oldDoc) {
          requireUser(doc.owner); //The owner of the item document must be the authenticated user
          channel("items-"+doc.owner);
          access(doc.owner,"items-"+doc.owner);
		}
	  `
	}
  }
}




